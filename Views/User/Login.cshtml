@using Quiz.ViewModels
@model LoginViewModel



<div class="container row justify-content-center align-items-center text-cener  mt-5 mx-2 mt-xl-5 mt-xs-5" style="height: 70vh;">
    
    <form asp-action="Login" method="post" class="col-xl-3 col-md-6 text-center">
        <h2 class="text-center">Đăng nhập</h2>
        <!-- Display login errors if any -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Login failed:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <div class="form-group text-left">
            <label asp-for="Username">Tên đặt nhập</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group text-left">
            <label asp-for="Password">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary h-50 mr-auto form-control mb-3">Đăng nhập</button>
            <a onclick="location.href='@Url.Action("Register", "User")'" class="h-50 mr-auto mt-2">Đăng ký</a>
        </div>
    </form>
    
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}